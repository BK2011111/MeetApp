<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/fabulous_icon"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fabulous_userName"
        android:layout_alignTop="@+id/fabulous_icon"
        android:layout_toRightOf="@+id/fabulous_icon"
        android:layout_toEndOf="@+id/fabulous_icon"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="赞了你的评论"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_alignBaseline="@+id/fabulous_userName"
        android:layout_alignBottom="@+id/fabulous_userName"
        android:layout_toRightOf="@+id/fabulous_userName"
        android:layout_toEndOf="@+id/fabulous_userName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fabulous_yourComment"
        android:layout_below="@+id/fabulous_icon"
        android:layout_alignLeft="@+id/fabulous_userName"
        android:layout_alignStart="@+id/fabulous_userName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fabulous_date"
        android:text="4月22日"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:layout_alignBaseline="@+id/fabulous_userName"
        android:layout_alignBottom="@+id/fabulous_userName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>